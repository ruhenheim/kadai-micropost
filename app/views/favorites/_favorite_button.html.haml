- if micropost.present?
  - if current_user.already_like?(micropost)
    = form_for(current_user.favorites.find_by(micropost_id: micropost.id), html: { method: :delete, style: 'display: inline;' }) do |f|
      = hidden_field_tag :micropost_id, micropost.id
      = f.submit 'お気に入り解除', class: 'btn btn-danger btn-xs'
  - else
    = form_for(current_user.favorites.build, html: { style: 'display: inline;' }) do |f|
      = hidden_field_tag :micropost_id, micropost.id
      = f.submit 'お気に入り追加', class: 'btn btn-primary btn-xs'
