- if logged_in?
  .row
    %aside.col-md-4
      = form_for(@micropost) do |f|
        .form-group
          = f.text_area :content, class: 'form-control', rows: 5
        = f.submit 'Post', class: 'btn btn-primary btn-block'
      %hr
      = link_to 'お気に入り', favorites_user_path(current_user), class: 'btn btn-success btn-block'
    .col-xs-8
      = render 'microposts/microposts', microposts: @microposts, user: current_user
- else
  .conter.jumbotron
    .text-center
      %h1 Welcome to the Microposts
      = link_to 'Sign up now!', signup_path, class: 'btn btn-primary'
