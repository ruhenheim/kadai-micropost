.row
  %aside.col-xs-4
    .panel.panel-default
      .panel-heading
        %h3.panel-title= @user.name
      .panel-body
        %img.media-object.img-rounded.img-responsive{:alt => "", :src => "#{gravatar_url(@user, { size: 500 })}"}/
    = render 'relationships/follow_button', user: @user
  .col-xs-8
    = render 'right_tabs'
    = render 'users', users: @followers
